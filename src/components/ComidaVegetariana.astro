            'Seitan a la plancha, huevo y patatas' : { desc: '' , precio: 11 , } , 
        } ,
                
    } 
    const comidaVegetarianaList = document.querySelector('#comidaVegetarianaList')
    for (const key in comidaVegetariana) {
        const clone = document.querySelector('#comidaVegetarianaTemplate').content.cloneNode(true)
        clone.querySelector('h1').innerHTML = key
        for (const item in comidaVegetariana[key]) {
            const clone2 = document.querySelector('#clone2').content.cloneNode(true)
            clone2.querySelector('h2').innerHTML = item 
            clone2.querySelector('div p').innerHTML = comidaVegetariana[key][item].desc;
            clone2.querySelector('article > p').innerHTML = `${comidaVegetariana[key][item].precio.toFixed(2)} €`;
            clone.appendChild(clone2)
        }   
        comidaVegetarianaList.appendChild(clone)
    }
</script>