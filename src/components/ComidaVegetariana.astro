        } ,
        'Hamburguesas' : { 
            'Hamburguesa vegetal sabor barbacoa, lechuga, queso y huevo' : { desc: '' , precio: 8 , } , 
            'Hamburguesa vegetal con salsa roquefort, lechuga y huevo' : { desc: '' , precio: 8 , } , 
        } ,
        'Bocadillos' : { 
            'Seitan, queso, huevo, lechuga, tomate y cebolla frita' : { desc: '' , precio: 8 , } , 
            'Seitan, tomate, queso y pimiento verde' : { desc: '' , precio: 8 , } , 
