</template>

<script>
    // @ts-nocheck
    const comidaVegetariana  = {
        'Tapas' : { 
            'Patatas con queso y salsa césar' : { desc: '' , precio: 8.5 , } , 
            'Croquetas de boletus' : { desc: '(10 ud.)' , precio: 8 , } , 
            'Champiñones con salsa verde' : { desc: '' , precio: 7.75 , } , 
        } ,
